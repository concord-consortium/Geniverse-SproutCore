<h1>Listing users</h1>

<table>
  <tr>
    <% if (@users.size > 0) %>
      <% @users[0].attributes.keys.sort.each do |attr| %>
        <th><%=h attr.humanize %></th>
      <% end %>
    <% end %>
  </tr>

<% @users.each do |user| %>
  <tr>
    <% user.attributes.keys.sort.each do |attr| %>
      <td><%=h user.attributes[attr] %></td>
    <% end %>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

